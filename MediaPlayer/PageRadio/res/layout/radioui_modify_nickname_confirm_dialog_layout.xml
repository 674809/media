<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radioui_search_dialog_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/radioui_pop_bg"/>

    <RelativeLayout
        android:id="@+id/radioui_modify_nickname_dialog_full_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/radioui_modify_nickname_dialog_text_full_tv"
            android:layout_width="@dimen/radioui_search_dialog_textView_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/radioui_modity_nickname_dialog_text_full_margintop"
            android:gravity="center"
            android:textSize="@dimen/radioui_search_dialog_text_size"
            android:textColor="@color/radioui_search_dialog_text_color"
            android:text="@string/radioui_modify_nickname_dialog_text"/>

        <LinearLayout
            android:id="@+id/radioui_modity_nickname_bt_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/radioui_modity_nickname_bt_ll_height"
            android:orientation="horizontal"
            android:layout_below="@+id/radioui_modify_nickname_dialog_text_full_tv"
            android:layout_marginTop="@dimen/radioui_modity_nickname_bt_ll_margintop">

            <TextView
                android:id="@+id/radioui_modity_nickname_ok_full_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/radioui_modify_nickname_bt_selector"
                android:text="@string/modify_nickname_yes"
                android:textColor="@color/radioui_rename_freq_bt_text_color"
                android:textSize="@dimen/radioui_modity_nickname_bt_textsize"/>
            <TextView
                android:id="@+id/radioui_modity_nickname_cancle_full_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/radioui_modify_nickname_bt_selector"
                android:text="@string/modify_nickname_no"
                android:textColor="@color/radioui_rename_freq_bt_text_color"
                android:textSize="@dimen/radioui_modity_nickname_bt_textsize"/>

        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/radioui_modify_nickname_dialog_half_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/radioui_modify_nickname_dialog_text_half_tv"
            android:layout_width="@dimen/radioui_search_dialog_textView_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/radioui_modity_nickname_dialog_text_half_margintop"
            android:gravity="center"
            android:textSize="@dimen/radioui_search_dialog_text_size"
            android:textColor="@color/radioui_search_dialog_text_color"
            android:text="@string/radioui_modify_nickname_dialog_text"/>

        <LinearLayout
            android:id="@+id/radioui_modity_nickname_bt_half_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/radioui_modity_nickname_bt_ll_height"
            android:orientation="horizontal"
            android:layout_below="@+id/radioui_modify_nickname_dialog_text_half_tv"
            android:layout_marginTop="@dimen/radioui_modity_nickname_bt_ll_margintop">

            <TextView
                android:id="@+id/radioui_modity_nickname_ok_half_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/radioui_modify_nickname_bt_selector"
                android:text="@string/modify_nickname_yes"
                android:textColor="@color/radioui_rename_freq_bt_text_color"
                android:textSize="@dimen/radioui_modity_nickname_bt_textsize"/>
            <TextView
                android:id="@+id/radioui_modity_nickname_cancle_half_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/radioui_modify_nickname_bt_selector"
                android:text="@string/modify_nickname_no"
                android:textColor="@color/radioui_rename_freq_bt_text_color"
                android:textSize="@dimen/radioui_modity_nickname_bt_textsize"/>

        </LinearLayout>



    </RelativeLayout>





</RelativeLayout>

