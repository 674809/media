<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/radioui_stationlist_item_height"
                android:descendantFocusability="blocksDescendants"
                android:background="@drawable/radioui_station_list_item_bg">

    <ImageView
        android:id="@+id/radioui_station_list_item_selected_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/radioui_station_list_item_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/radioui_stationlist_freq_selected_iv_marginleft"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/radioui_station_list_item_freq_tv"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:text="@string/refresh_station_list"
        android:textSize="@dimen/radioui_stationlist_text_size"
        android:textColor="@color/radioui_station_list_item_freq_text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/radioui_stationlist_freq_tv_marginleft"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical|left"/>

    <ImageView
        android:id="@+id/radioui_station_list_item_rename_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:focusable="false"
        android:clickable="true"
        android:src="@drawable/radioui_station_list_item_rename"/>


    <ImageView
        android:id="@+id/radioui_station_list_item_collected_status_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:focusable="false"
        android:clickable="true"
        android:src="@drawable/radioui_station_list_uncollected"/>

</RelativeLayout>
