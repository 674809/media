<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:background="@drawable/bt_main_bg"
    android:orientation="horizontal">


    <com.egar.mediaui.view.IrregularImageView
        android:id="@+id/close"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/bt_left_bg" />

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="40dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <com.egar.mediaui.view.IrregularImageView
        android:id="@+id/btn_radio"
        android:layout_width="226dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="54dp"
        android:background="@drawable/radio_bt_bg" />

    <View
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/btn_radio"
        android:background="@drawable/dividing_line" />

    <RelativeLayout
        android:layout_width="226dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/radio"
            android:text="@string/radio"
            android:textSize="28sp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_usb"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_radio"
        android:background="@drawable/usb_bt_bg"
        android:focusable="true" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_radio">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/usb"
            android:text="@string/usb_upper"
            android:textSize="28sp" />
    </RelativeLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/btn_usb"
        android:background="@drawable/dividing_line" />

    <Button
        android:id="@+id/btn_bluebooth"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_usb"
        android:background="@drawable/usb_bt_bg"
        android:focusable="true" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_usb">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/bt"
            android:text="@string/bluetooth"
            android:textSize="28sp" />
    </RelativeLayout>
   <!-- <View
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/btn_bluebooth"
        android:background="@drawable/dividing_line" />-->


    <com.egar.mediaui.view.IrregularImageView
        android:id="@+id/btn_sound"
        android:layout_width="226dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_bluebooth"
        android:background="@drawable/sound_bt_bg" />

    <RelativeLayout
        android:layout_width="226dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btn_bluebooth">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/sound_ico"
            android:text="@string/sound"
            android:textSize="28sp" />
    </RelativeLayout>
    <View
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/btn_sound"
        android:background="@drawable/dividing_line" />

    <com.egar.mediaui.view.IrregularImageView
        android:id="@+id/switch_size"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_right_bg" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/switch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="40dp"
            android:src="@drawable/icon_spread" />
    </RelativeLayout>

</RelativeLayout>